<div class="container-fluid mx-auto" style="background-color: #F5F7FA;">
    <%- include('../../partials/sections/sectionMainAppTitle'); %>
    <!-- first Row -->
    <div class="row justify-content-evenly ms-4">
        <!-- clientes -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/clientes" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let countClient = 0 
                                    for (let i=0; clientes.length>i; i++ ) {
                                        clientes[i].visible ? countClient++ : null 
                                    } %>
                                    <h3 class="font-medium"><%= parseInt(countClient) %></h3>
                                    <span>Clientes</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="fa-regular fa-handshake fa-3x primary float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- proyectos -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/proyectos/" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let arrayProject = []
                                        for (let i=0; clientes.length>i; i++ ) {
                                            arrayProject.push(clientes[i].project)
                                        }
                                        function sumarArray(arr) {
                                            return arr.reduce((suma, numero) => suma + numero, 0);
                                        }
                                        const resultado = sumarArray(arrayProject); %>
                                    <h3 class="font-medium"><%= resultado %></h3>
                                    <span>Proyectos</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-rocket danger font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- usuarios -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/usuarios" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let usuariosVisibles = [];
                                        for (let u=0; usuarios.length > u ; u++) {
                                            usuarios[u].visible ? usuariosVisibles.push(usuarios[u]) : null
                                        } %>
                                    <h3 class="font-medium"><%= parseInt(usuariosVisibles.length) %>/<span style="font-size: 0.95rem;" ><%= parseInt(usuarios.length) %></span></h3>
                                    <span>Usuarios Activos</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-users success font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- mensajes -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/webchat/" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-start">
                                    <% let cantMensajes=0
                                    for (let i=0; mensajes.length>i; i++) {
                                        mensajes[i].status ? cantMensajes++ : null 
                                    } %>
                                    <h3 class="font-medium"><%= parseInt(cantMensajes) %></h3>
                                    <span>Mensajes</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-bubbles warning font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row justify-content-evenly ms-4">
        <!-- Estado de Programación / Mecanizado -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/programas" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let arrayActiveProject = []
                                    for (let i=0; proyectos.length>i; i++ ) {
                                        proyectos[i].project[0].levelProject === 'ganado' ? arrayActiveProject.push(proyectos[i].project) : null
                                    } %>
                                    <h3><%= arrayActiveProject.length %></h3>
                                    <span>Programación Mecanizado Ajuste</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-calendar font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Herramientas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/herramientas" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let herramientasVisibles = [], herramientasEnUso = [];
                                        for (let h=0; herramientas.length > h ; h++) {
                                            herramientas[h].status ? herramientasVisibles.push(herramientas[h]) : herramientasEnUso.push(herramientas[h])
                                        } %>
                                        <h3 class="font-medium"><%= parseInt(herramientasVisibles.length) %>/<span style="font-size: 0.95rem;"><%= parseInt(herramientas.length) %></span></h3>
                                        <% if ( herramientasEnUso.length != 0 ) { %>
                                            <span><%= parseInt(herramientasVisibles.length) %> Herramientas</span> / <span class="badge rounded-pill text-bg-danger"><%= herramientasEnUso.length %> de Baja</span>
                                            <i class="fa-solid fa-triangle-exclamation fa-lg" style="color: #b09b12;"></i>
                                        <% } %>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-wrench success font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Maquinas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/maquinas" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let maquinasVisibles = [], maquinasEnMantenimiento = [];
                                        for (let h=0; maquinas.length > h ; h++) {
                                            maquinas[h].status ? maquinasVisibles.push(maquinas[h]) : maquinasEnMantenimiento.push(maquinas[h])
                                        } %>
                                        <h3 class="font-medium"><%= parseInt(maquinasVisibles.length) %>/<span style="font-size: 0.95rem;" ><%= parseInt(maquinas.length) %></span></h3>
                                        <% if ( maquinasEnMantenimiento.length != 0 ) { %>
                                            <span class="me-1">Máquinas</span>
                                            <span class="badge rounded-pill text-bg-danger"><%= maquinasEnMantenimiento.length %> en Mantenimiento</span>
                                            <i class="fa-solid fa-triangle-exclamation fa-lg" style="color: #b09b12;"></i>
                                        <% } else { %>
                                            <span class="badge rounded-pill text-bg-success">Máquinas Activas</span>
                                        <% } %>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-bulb success font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Proveedores -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/proveedores" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let proveedoresVisibles = [], proveedoresInactivos = [];
                                        for (let h=0; proveedores.length > h ; h++) {
                                            proveedores[h].status ? proveedoresVisibles.push(proveedores[h]) : proveedoresInactivos.push(proveedores[h])
                                        } %>
                                        <h3 class="font-medium"><%= parseInt(proveedoresVisibles.length) %>/<span style="font-size: 0.95rem;" ><%= parseInt(proveedores.length) %></span></h3>
                                        <% if ( proveedoresInactivos.length != 0 ) { %>
                                            <span><%= parseInt(proveedoresVisibles.length) %> Proveedores Activos</span> / <span class="badge rounded-pill text-bg-danger"><%= proveedoresInactivos.length %> en Mantenimiento</span>
                                        <% } else { %>
                                            <span class="badge rounded-pill text-bg-success">Proveedores Activos</span>
                                        <% } %>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-energy font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Third Row -->
    <div class="row justify-content-evenly ms-4">
        <!-- Configuración Herramientas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/herramientasConfig" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% for (let i=0; proyectos.length>i; i++ ) {
                                        proyectos[i].project[0].levelProject === 'ganado' ? arrayActiveProject.push(proyectos[i].project) : null
                                    } %>
                                    <h3><%= arrayActiveProject.length %></h3>
                                    <span>Configuración Herramientas</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-equalizer font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Consumibles -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/consumibles" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let arrayConsumibles = [], arrayVisibleConsumible = [], arrayActiveConsumible = []
                                    for (let i=0; consumibles.length>i; i++ ) {
                                        consumibles[i].visible ? arrayConsumibles.push(consumibles[i]) : null
                                    }
                                    for (let j=0; arrayConsumibles.length>j; j++ ) {
                                        arrayConsumibles[j].stock > 0 ? arrayVisibleConsumible.push(arrayConsumibles[j]) : null
                                    }
                                    arrayActiveConsumible = [].concat(...arrayVisibleConsumible)
                                    %>
                                    <h3 class="font-medium"><%= arrayActiveConsumible.length %>/<span style="font-size: 0.95rem;" ><%=arrayConsumibles.length%></span></h3>
                                    <span>Consumibles - EPP</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-basket font-large-2 float-right"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Ordenes Activas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <a href="/api/ordenes/active" style="text-decoration: none;">
                <div class="card rounded-3 card_dashboard">
                    <div class="card-content">
                        <div class="card-body position-relative">
                            <div class="media d-flex mx-2">
                                <div class="media-body text-left">
                                    <% let cantOrdenes=0, cantOrdenesPreparadas=0, cantOrdenesEntregadas=0
                                    for (let i=0; ordenes.length>i; i++) {
                                        ordenes[i].visible ? cantOrdenes++ : null
                                        ordenes[i].visible && ordenes[i].prepared ? cantOrdenesPreparadas++ : null
                                        ordenes[i].visible && ordenes[i].active ? cantOrdenesEntregadas++ : null
                                    } %>
                                    <h3 class="font-medium"><%= parseInt(cantOrdenesPreparadas) %>/
                                        <span style="font-size: 1rem; color: darkgreen;">Entregados <%= parseInt(cantOrdenesEntregadas) %> </span> /
                                        <span style="font-size: 1rem; color: rgb(255, 0, 0);">Total <%= parseInt(cantOrdenes) %></span>
                                    </h3>
                                    <span>Solicitudes EPP's</span>
                                </div>
                                <div class="align-self-center ms-auto">
                                    <i class="icon-bell success font-large-2 float-right"></i>
                                </div>
                            </div>
                            <% if(parseInt(cantOrdenesPreparadas)>0) { %>
                                <span title="Pedidos Preparados"
                                    class="badge rounded-pill bg-danger text-light position-absolute top-0 start-100 translate-middle">
                                    <%= parseInt(cantOrdenesPreparadas) %>
                                </span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Sesiones activas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <div class="card rounded-3 card_dashboard">
                <div class="card-content">
                    <div class="card-body">
                        <div class="media d-flex ms-2">
                            <div class="media-body text-left">
                                <h3 class="primary"><%= parseInt(sessions) %></h3>
                                <span>Sesiones activas</span>
                            </div>
                            <div class="align-self-center ms-auto">
                                <i class="icon-key primary font-large-2 float-right"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fourth Row -->
    <div class="row justify-content-evenly ms-4">
        <!-- Tasa de Conversion -->
        <div class="col-xl-3 col-sm-6 col-12">
            <div class="card rounded-3 card_dashboard">
                <div class="card-content">
                    <div class="card-body">
                        <div class="media d-flex mx-2">
                            <div class="media-body text-left">
                            <% let countActiveProject = 0; let countVisibleClient = 0
                                for (let i=0; clientes.length>i; i++ ) {
                                    clientes[i].visible ? clientes[i].project>0 ? countActiveProject++ : null : null
                                    countVisibleClient++
                                } 
                                let valueRateClient = parseFloat((countActiveProject / countVisibleClient)*100).toFixed(2) %>

                            <h3 class="primary"><%= valueRateClient %> %</h3>
                            <span>Tasa conversion</span>
                            </div>
                            <div class="align-self-center ms-auto">
                                <i class="icon-badge danger font-large-2 float-right"></i>
                            </div>
                        </div>
                        <div class="progress mt-1 mb-0" style="height: 7px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: <%= valueRateClient %>%" aria-valuenow="<%= valueRateClient %>" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Cutting Tools Rate -->
        <div class="col-xl-3 col-sm-6 col-12">
            <div class="card rounded-3 card_dashboard">
                <div class="card-content">
                    <div class="card-body">
                        <div class="media d-flex mx-2">
                            <div class="media-body text-left">
                                <% let countActiveCuttingTools = 0; let countVisibleCuttingTools = 0
                                for (let i=0; herramientas.length>i; i++ ) {
                                    herramientas[i].status ? herramientas[i].visible ? countActiveCuttingTools++ : null : null
                                    countVisibleCuttingTools++
                                } 
                                let valueRateCuttingTools = parseFloat((countActiveCuttingTools / countVisibleCuttingTools)*100).toFixed(2) %>
                                <h3 class="success"><%= valueRateCuttingTools %>%</h3>
                                <span>Herramientas Rate</span>
                            </div>
                            <div class="align-self-center ms-auto">
                                <i class="icon-cup success font-large-2 float-right"></i>
                            </div>
                        </div>
                        <div class="progress mt-1 mb-0" style="height: 7px;">
                            <% if (valueRateCuttingTools > 90 ) { %>
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= valueRateCuttingTools %>%" aria-valuenow="<%= valueRateCuttingTools %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } else if (90 > valueRateCuttingTools && valueRateCuttingTools > 80) { %>
                                <div class="progress-bar bg-warning" role="progressbar" style="width: <%= valueRateCuttingTools %>%" aria-valuenow="<%= valueRateCuttingTools %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } else { %>
                                <div class="progress-bar bg-danger" role="progressbar" style="width: <%= valueRateCuttingTools %>%" aria-valuenow="<%= valueRateCuttingTools %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Tools Rate -->
        <div class="col-xl-3 col-sm-6 col-12">
            <div class="card rounded-3 card_dashboard">
                <div class="card-content">
                    <div class="card-body">
                        <div class="media d-flex mx-2">
                            <div class="media-body text-left">
                                <% let countActiveTools = 0; let countVisibleTools = 0
                                for (let i=0; maquinas.length>i; i++ ) {
                                    maquinas[i].status ? maquinas[i].visible ? countActiveTools++ : null : null
                                    countVisibleTools++
                                } 
                                let valueRateTool = parseFloat((countActiveTools / countVisibleTools)*100).toFixed(2) %>
                                <h3 class="success"><%= valueRateTool %>%</h3>
                                <span>Máquinas Rate</span>
                            </div>
                            <div class="align-self-center ms-auto">
                                <i class="icon-cup success font-large-2 float-right"></i>
                            </div>
                        </div>
                        <div class="progress mt-1 mb-0" style="height: 7px;">
                            <% if (valueRateTool > 90 ) { %>
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= valueRateTool %>%" aria-valuenow="<%= valueRateTool %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } else if (90 > valueRateTool && valueRateTool > 80) { %>
                                <div class="progress-bar bg-warning" role="progressbar" style="width: <%= valueRateTool %>%" aria-valuenow="<%= valueRateTool %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } else { %>
                                <div class="progress-bar bg-danger" role="progressbar" style="width: <%= valueRateTool %>%" aria-valuenow="<%= valueRateTool %>" aria-valuemin="0" aria-valuemax="100"></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Visitas -->
        <div class="col-xl-3 col-sm-6 col-12">
            <div class="card rounded-3 card_dashboard">
                <div class="card-content">
                    <div class="card-body">
                        <div class="media d-flex mx-2">
                            <div class="media-body text-left">
                                <% const usersVisitsQty = [];
                                    let porcentaje = 0;
                                function sumarNumeros(array) {
                                    return array.reduce((acumulador, valorActual) => acumulador + valorActual, 0);
                                }

                                for(let v=0; usuarios.length>v; v++) {
                                    if (usuarios[v].visible && parseInt(usuarios[v].visits) > 0) {
                                        usersVisitsQty.push(parseInt(usuarios[v].visits))
                                    }
                                }
                                let totalVisitas = sumarNumeros(usersVisitsQty); 
                                porcentaje = parseInt((userInfo.visits/totalVisitas)*100)%>
                                <h3 class="danger"><%= userInfo.visits %>/<span style="font-size: 0.95rem;" ><%= parseInt(totalVisitas) %></span></h3>
                                <span>Total Visitas Usuario: <%= userInfo.username %></span>
                            </div>
                            <div class="align-self-center ms-auto">
                                <i class="icon-directions danger font-large-2 float-right"></i>
                            </div>
                        </div>

                        <div class="progress mt-1 mb-0" style="height: 7px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: <%= porcentaje %>%" aria-valuenow="<%= userInfo.visits %>" aria-valuemin="0" aria-valuemax="<%= parseInt(totalVisitas) %>"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>