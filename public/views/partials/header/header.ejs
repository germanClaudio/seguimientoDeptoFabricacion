<header>
    <nav class="navbar fixed-top navbar-dark bg-dark text-white m-b-80">
        <div class="container-fluid px-2 my-2">
            <a class="navbar-brand mx-2" role="button" href="#offcanvasExample" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasWithBothOptions"
                aria-controls="offcanvasWithBothOptions">
                <img src='/src/images/logo01-bco.png' title="Logo Prodismo" width="165px" height="30px"
                    class="d-none d-xl-inline-block align-text-top">
                <img src='/src/images/soloLogo01-bco.png' title="Logo Prodismo" width="40px" height="30px"
                    class="d-xl-none d-inline-block align-text-top">
            </a>
            <div class="me-auto d-block" id="navbarTogglerDemo02">
                <ul class="navbar-nav my-auto list-group list-group-horizontal">
                    <li class="nav-item mx-4 active d-none d-lg-inline">
                        <a class="nav-link" aria-current="page" title="Home" href="/api/auth/index">
                            <i class="fa-solid fa-home" aria-hidden="true"></i>
                            <span class="d-none d-xxl-inline">Home</span>
                        </a>
                    </li>
                    <li class="nav-item mx-4 d-none d-lg-inline">
                        <a class="nav-link" title="Clientes" href="/api/clientes">
                            <i class="fa-regular fa-handshake" aria-hidden="true"></i>
                            <span class="d-none d-xxl-inline">Clientes</span>
                        </a>
                    </li>
                    <li class="nav-item mx-4 d-none d-lg-inline">
                        <a class="nav-link" title="Proyectos" href="/api/proyectos">
                            <i class="icon-rocket" aria-hidden="true"></i>
                            <span class="d-none d-xxl-inline">Proyectos</span>
                        </a>
                    </li>
                    <li class="nav-item mx-4 d-none d-lg-inline">
                        <a class="nav-link" title="Programación" href="/api/programas">
                            <i class="icon-calendar" aria-hidden="true"></i>
                            <span class="d-none d-xxl-inline">Programación</span>
                        </a>
                    </li>
                    <li class="nav-item mx-4 d-none d-lg-inline">
                        <a class="nav-link" title="WebChat" href="/api/webchat">
                            <i class="fa-solid fa-comments" aria-hidden="true"></i>
                            <span class="d-none d-xxl-inline">WebChat</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="d-flex text-center">
                <div id="expires" style="display: none;"><%= expires %></div>

                <div class="vr mx-1 d-none d-xl-inline" style="color: white;"></div>

                <div class="container text-center m-auto d-none d-xl-inline" style="width: auto;">
                    <div class="mx-auto small" id="countdown"></div>
                    <div class="mx-auto small" id="clock"></div>
                </div>

                <div class="vr mx-1 d-none d-xl-inline" style="color: white;"></div>

                <div class="container text-center m-auto" style="width: auto;">
                    <% if (userInfo.admin && userInfo.superAdmin) { %>
                        <div class="mx-auto small text-center">
                            <span id="mostrarRolUser" class="badge rounded-pill bg-primary position-relative">
                                SuperAdmin
                                <span class="position-absolute top-0 start-100 translate-middle">
                                    <i class="fa-solid fa-crown fa-beat fa-lg"
                                        title="SuperAdmin"
                                        style="color: #a89c0d; --fa-rotate-angle: 20deg;">
                                    </i>
                                </span>
                            </span>
                        </div>
                        <div class="mx-auto small text-center" id="mostrarUserName">
                            <%= userInfo.name %>, <%= userInfo.lastName %>
                        </div>
                        <div class="d-none" id="userBanner_<%= userInfo._id %>"><%= userInfo._id %></div>
                    <% } else if (userInfo.admin) { %>
                        <div class="mx-auto small text-center">
                            <span id="mostrarRolUser" class="badge rounded-pill bg-primary">Admin</span>
                        </div>
                        <div class="mx-auto small text-center" id="mostrarUserName">
                            <%= userInfo.name %>, <%= userInfo.lastName %>
                        </div>
                        <div class="d-none" id="userBanner_<%= userInfo._id %>"><%= userInfo._id %></div>
                    <% } else { %>
                        <div class="mx-auto small text-center">
                            <span id="mostrarRolUser" class="badge rounded-pill bg-info text-dark">User</span>
                        </div>
                        <div class="mx-auto small text-center" id="mostrarUserName">
                            <%= userInfo.name %>, <%= userInfo.lastName %>
                        </div>
                        <div class="d-none" id="<%= userInfo._id %>"></div>
                    <% } %>
                </div>
                <button type="button" title="Preferencias Usuario" class="btn btn-link rounded-circle my-auto mx-2 shadow" name="btnPreferences" id="btnPreferences">
                    <i class="fa-regular fa-star"></i>
                </button>
                <a title="Settings <%= userInfo.name %> <%= userInfo.lastName %>" href="/api/usuarios/getUserSettings/<%= userInfo._id %>" name="btnSetting" id="btnSetting">
                    <img id="avatarUser" class="img rounded-circle me-3 d-none d-lg-inline shadow" alt="Avatar <%= userInfo.name %> <%= userInfo.lastName %>"
                        src="<%= userInfo.avatar %>" width="55px" height="55px">
                </a>

                <div class="vr mx-2 d-none d-xl-inline" style="color: white;"></div>

                <button id="logoutBanner" class="btn btn-light me-2 my-auto shadow" title="LogOut" style="width: auto;" type="button">
                    <i class="fa-solid fa-sign-out"></i>
                    <span class="d-none d-xxl-inline">LogOut</span>
                </button>

            </div>
        </div>
    </nav>
    <% if (userInfo.admin) { %>
        <%- include('../../partials/sidebar/sidebarAdmin'); %>
    <% } else { %>
        <%- include('../../partials/sidebar/sidebarUser'); %>
    <% } %>
</header>