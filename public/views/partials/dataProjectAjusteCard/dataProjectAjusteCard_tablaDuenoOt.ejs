<!-- tabla Dueño de OT -->
<table id="tablaDuenoOt<%=k%>" name="tablaDuenoOt" class="table-responsive align-middle col-2 border-end border-dark" style="font-size: 10pt">
    <thead class="align-middle" style="background-color: #bbc">
        <tr>
            <th colspan="3" class="text-center pb-1"><div class="mb-3">DUEÑO DE PIEZA</div></th>
        </tr>
        <tr>
            <th style="width:20vw" scope="col-1" class="text-center pb-1"> # Leg</th>
            <th style="width:40vw" scope="col-1" class="text-center pb-1">Nombre</th>
            <th style="width:40vw" scope="col-1" class="text-center pb-1">Apellido</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% let largoArrayOt = parseInt(arrayVisibleOci[k].otProject.length), alturaFila = 7, alturaTotal = 7
        alturaTotal = parseInt(largoArrayOt*alturaFila)
        
        if (arrayVisibleOci[k].visible) {
            if (arrayVisibleOci[k].ociStatus) { %>
                <tr id="rowAjusteSelected<%=k%>" name="rowSelected<%=k%>" class="border-bottom fw-semibold fs-6" style="height: <%= alturaTotal %>vh;">
            
            <% } else { %>
                <tr class="border-bottom fw-semibold fs-6" style="height: 7vh; background-color: #dedede;">
            <% } 
            
            if (arrayVisibleOci[k].ociOwner[0].legajoId !== 0) { %>
                    <td class="text-center align-middle overflow-ellipsis">
                        <span id="legajoId<%=k%>" class="badge rounded-pill bg-dark text-white">
                            <%= arrayVisibleOci[k].ociOwner[0].legajoId %>
                        </span>
                    </td>
                    <td class="text-center align-middle overflow-ellipsis">
                        <small id="nombreAjuste<%=k%>" class="text-dark align-middle">
                            <%= arrayVisibleOci[k].ociOwner[0].name %>
                        </small>
                    </td>
                    <td class="text-center align-middle overflow-ellipsis">
                        <small id="apellidoAjuste<%=k%>" class="text-dark">
                            <%= arrayVisibleOci[k].ociOwner[0].lastName %>
                        </small>
                    </td>
                    <td class="d-none">
                        <small id="duenoOtIdHidden<%=k%>"><%= arrayVisibleOci[k].ociOwner[0]._id %></small>
                    </td>

            <% } else { %>
                    <td class="text-center align-middle overflow-ellipsis" colspan="3">
                        <span id="duenoOt<%=k%>" class="badge rounded-pill bg-danger text-white my-1">No asignado</span>
                    </td>
            <% } %>
            </tr>
        <% } %>
    </tbody>
</table>