<!-- tabla seguimiento -->
                                                                
<table id="tablaSeguimiento<%=k%>"
    name="tablaSeguimiento" class="table-responsive align-middle col-3 border-end border-dark" style="font-size: 10pt">
    <thead class="align-middle"
        style="background-color: #bbc">
        <tr>
            <th colspan="2" class="text-center pb-1"> <div class="mb-3">INTERNO</div></th>
            <th colspan="1" class="text-center pb-1"> <div class="mb-3">EXTERNO</div></th>
        </tr>
        <tr>
            <th style="width:30vw" scope="col-1" class="text-center pb-1"><i class="fa-solid fa-compass-drafting"></i> Diseño</th> 
            <th style="width:30vw" scope="col-1" class="text-center pb-1"><i class="fa-solid fa-chart-area"></i> Simulación</th> 
            <th style="width:30vw" scope="col-1" class="text-center pb-1"><i class="fa-solid fa-truck-field-un"></i> Proveedor</th> 
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% let pathMongoOtProject = proyecto[m].project[j].oci[k].otProject
            proyecto[m].project[j].oci[k].otProject.forEach((ot, n) => { 
                if (pathMongoOtProject[n].visible) {
                    if (pathMongoOtProject[n].otStatus) { %>
                        <tr name="rowSelected<%=k%>_<%=n%>" class="border-bottom fw-semibold fs-6" style="height: 7vh;">
                            <td class="text-center align-middle overflow-ellipsis">
                                <small id="otDesign<%=k%>_<%=n%>" class="text-dark align-middle">
                                    <%= pathMongoOtProject[n].otDesign %>
                                </small>
                            </td>
                            <td class="text-center align-middle overflow-ellipsis">
                                <small id="otSimulation<%=k%>_<%=n%>" class="text-dark">
                                    <%= pathMongoOtProject[n].otSimulation %>
                                </small>
                            </td>
                            <td class="text-center align-middle overflow-ellipsis">
                                <small id="otSupplier<%=k%>_<%=n%>" class="text-dark">
                                    <%= pathMongoOtProject[n].otSupplier %>
                                </small>
                            </td>
                        </tr>

                    <% } else { %>
                        <tr class="border-bottom fw-semibold fs-6" style="height: 7vh; background-color: #dedede;">
                            <td class="text-center">
                                <small id="otDesign<%=k%>_<%=n%>" class="text-dark align-middle">
                                    <%= pathMongoOtProject[n].otDesign %>
                                </small>
                            </td>
                            <td class="text-center align-middle">
                                <small id="otSimulation<%=k%>_<%=n%>" class="text-dark">
                                    <%= pathMongoOtProject[n].otSimulation %>
                                </small>
                            </td>
                            <td class="text-center align-middle">
                                <small id="otSupplier<%=k%>_<%=n%>" class="text-dark">
                                    <%= pathMongoOtProject[n].otSupplier %>
                                </small>
                            </td>
                        </tr>
                    <% }
                }
            }) %>
    </tbody>
</table>