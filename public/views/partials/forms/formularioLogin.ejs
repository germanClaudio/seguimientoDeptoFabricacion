<div class="form-group col-4 mx-auto w-25 border p-3 bg-light .bg-light.bg-gradient text-dark bg-opacity-75 rounded-3 shadow-lg">
    <form id="loginForm" action="login" method="post"> 
        <fieldset>
            <div class="d-flex justify-content-center mx-auto">
                <img src='/src/images/LogoProdismoIngresoTransparente.png' width="260" height="240" class="p-2 my-1 mx-auto">
            </div>
            <label for="username">Usuario o N° Legajo</label>
            <input type="text" name="username" id="username" class="form-control"
                placeholder="Nombre de Usuario o Numero Legajo" autocomplete="username" required>
            <span id="warningUser" class="badge rounded-pill text-bg-warning"></span>
            <br>
            <label for="password">Password</label>
            <div class="input-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                <button class="btn btn-dark text-light" title="Alternar vista/ocultar password" type="button" id="show-password-btn"><i class="fa-solid fa-eye" aria-hidden="true"></i></button>
            </div>
            <span id="warningPassword" class="badge rounded-pill text-bg-warning"></span>
            <br>
            <div class="form-check mt-1 mb-2">
                <input class="form-check-input" type="checkbox" name="sessionStarted" value="checked" id="sessionStarted">
                <label class="form-check-label text-dark" for="sessionStarted">
                    Mantener sessión activa
                </label>
            </div>
            <div class="my-4 text-end">
                <a href="/api/auth/forgot-password" class="link" style="text-decoration: none;">¿Olvidaste tu contraseña?</a>
            </div>
            <div class="d-flex justify-content-center">
                <button id="btnFormLogin" title="Login" type="button" class="btn btn-primary mx-auto">Login <i class="fa-solid fa-sign-in" aria-hidden="true"></i></button>
                <button type="reset" title="Reset" class="btn btn-danger mx-auto">Reset <i class="fa-solid fa-refresh" aria-hidden="true"></i></button>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </fieldset>
    </form>
</div>