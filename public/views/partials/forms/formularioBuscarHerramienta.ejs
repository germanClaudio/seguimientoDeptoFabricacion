<div class="shadow-lg mx-auto my-2 w-50 border rounded p-3 text-white bg-opacity-50" style="background-color: #272787;">
    <form class="row align-items-center" id="searchFormCuttingTool" onsubmit="return searchCuttingTools(this)">
        <div class="col-md-3">
            <label class="form-check-label ms-2 text-white" for="queryTools">Buscar</label>
            <input class="form-control" type="text" id="queryCuttingTools" name="queryCuttingTools" placeholder="Buscar Herramientas">
        </div>

        <div class="col-md-2 ms-2">
            <label class="form-check-label ms-2 text-white" for="statusCuttingTool">Status</label>
            <select class="form-select small" aria-label=".form-select" name="statusCuttingTool" id="statusCuttingTool" style="font-size: 13px;">
                <option selected value="todas">Todas</option>
                <option value="activas">Activas</option>
                <option value="inactivas">Inactivas</option>
            </select>
        </div>

        <div class="col-md-2 ms-2">
            <label class="form-check-label ms-2 text-white" for="typeCuttingTool">Tipo</label>
            <select class="form-select small" aria-label=".form-select" name="typeCuttingTool" id="typeCuttingTool" style="font-size: 13px;">
                <option selected value="todas">Todas</option>
                <option value="toricas">Tóricas</option>
                <option value="planas">Planas</option>
                <option value="esfericas">Esféricas</option>
                <option value="final">Final</option>
                <option value="altoAvance">Alto avance</option>
                <option value="otras">Otras</option>
            </select>
        </div>

        <div class="col-md-2 ms-2">
            <label class="form-check-label ms-2 text-white" for="diamCuttingTool">Diámetro</label>
            <select class="form-select small" aria-label=".form-select" name="diamCuttingTool" id="diamCuttingTool" style="font-size: 13px;">
                <option selected value="todas">Todas</option>
                <option value="16">Ø16</option>
                <option value="20">Ø20</option>
                <option value="25">Ø25</option>
                <option value="32">Ø32</option>
                <option value="50">Ø50</option>
                <option value="52">Ø52</option>
                <option value="63">Ø63</option>
                <option value="80">Ø80</option>
                <option value="100">Ø100</option>
                <option value="125">Ø125</option>
            </select>
        </div>

        <div class="col-md">
            <button class="btn rounded-circle bg-white me-2 text-dark" title="Buscar" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <button class="btn rounded-circle bg-white ms-2 text-dark" title="Eliminar filtros" type="reset">
                <i class="fa-solid fa-filter-circle-xmark"></i>
            </button>
        </div>
    </form>
</div>