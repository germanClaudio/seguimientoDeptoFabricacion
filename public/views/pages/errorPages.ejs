<!DOCTYPE html>
<html lang="en">
 
<head>
    <%- include('../partials/head/head'); %>
</head>

<body>
    <%- include('../partials/header/headerLogin'); %>

    <% if (errorInfo.flag === 498) { %>
        <%- include('../partials/errorPages/498_page_Invalid_Token'); %>

    <% } else if (errorInfo.flag === 400) { %>
        <%- include('../partials/errorPages/400_page_NotValidData', {error: err, errorInfo: errorInfo}); %>

    <% } else if (errorInfo.flag === 401) { %>
        <%- include('../partials/errorPages/401_page_NotAuth_User'); %>
        
    <% } else if (errorInfo.flag === 403) { %>
        <%- include('../partials/errorPages/403_page_Invalid_CSRF_Token', {error: err}); %>
        
    <% } else if (errorInfo.flag === 404) { %>
        <%- include('../partials/errorPages/404_pageNotFound'); %>
        
    <% } else { %>
        <%- include('../partials/errorPages/serverError500', {error: err, errorInfo: errorInfo}); %>

    <% } %>

    <footer>
        <%- include('../partials/footer/footer'); %>
    </footer>
    
    <!-- Optional JavaScript -->
    
</body>
 
</html>